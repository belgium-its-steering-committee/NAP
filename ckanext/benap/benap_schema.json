      "label": {
        "en": "Data format - Description",
        "fr": "Data format - Description",
        "nl": "Data format - Description",
        "de": "Data format - Description"
      },
      "form_placeholder": "eg. Proprietary model in accordance to CEN TC278 / WG17 / Urban ITS",
      "help_text": {
